{
  "include": [
    "src/*",
    "src/**/*",
    "__tests__",
    "scripts",
    "src-cli/*",
    "src-cli/**/*",
  ],
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": [
      "DOM"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@ddd-tool/domain-designer-core": [
        "./node_modules/@ddd-tool/domain-designer-core"
      ]
    }
  }
}